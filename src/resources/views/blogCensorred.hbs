<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bài viết đã duyệt</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Tên bài viết
                                    </th>
                                    <th>
                                        Tác giả
                                    </th>
                                    <th>
                                        Mô tả ngắn
                                    </th>
                                    <th>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>

                            {{#each data}}
                            <tbody>
                                <tr>
                                    <td>
                                        {{@index }}
                                    </td>
                                    <td>
                                        {{this.blog_id}}
                                    </td>
                                    <td>
                                        {{this.blog_title}}
                                    </td>
                                    <td>
                                        {{this.first_name}} {{this.last_name}}
                                    </td>
                                    <td class="overflow-hidden" style="max-width: 100px !important;">
                                        {{this.blog_description}}
                                    </td>
                                    <td>
                                        {{this.blog_visited}}
                                    </td>
                                    <td>
                                        <a href="/cms/delete-blog/{{this.blog_id}}">Xóa</a>
                                    </td>
                                </tr>
                            </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lịch sửa chữa</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Tên khách hàng
                                    </th>
                                    <th>
                                        Giới tính
                                    </th>
                                    <th>
                                        Địa chỉ
                                    </th>
                                    <th>
                                        Số điện thoại
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Ngày hẹn
                                    </th>
                                    <th>
                                        Vấn đề
                                    </th>
                                    <th>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>

                            {{#each data}}
                            <tbody>
                                <tr>
                                    <td>
                                        {{this.schedule_id}}
                                    </td>
                                    <td>
                                        {{this.gender}}
                                    </td>
                                    <td>
                                        {{this.first_name}} {{this.last_name}}
                                    </td>
                                    <td>
                                        {{this.address}}
                                    </td>
                                    <td>
                                        {{this.number_phone}}
                                    </td>
                                    <td>
                                        {{this.email}}
                                    </td>
                                    <td>
                                        {{this.repair_date}}
                                    </td>
                                    <td>
                                        {{this.problem}}
                                    </td>
                                    <td>
                                        <a href="/cms/export-bill-repair/{{this.schedule_id}}">Xuất hóa đơn</a>
                                        <a href="/cms/delete-repair/{{this.schedule_id}}">Xóa</a>
                                    </td>
                                </tr>
                            </tbody>
                            {{/each}}

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
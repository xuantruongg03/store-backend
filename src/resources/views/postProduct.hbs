<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thêm sản phẩm</h4>
                    <p class="card-description">
                        Thêm sản phẩm
                    </p>
                    <form class="forms-sample" action="/cms/create-new-product" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="unitProduct">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="unitProduct" name="name"
                                placeholder="Tên sản phẩm">
                        </div>

                        <div class="form-group">
                            <label for="quantityProduct">Số lượng</label>
                            <input type="number" class="form-control" id="quantityProduct" name="quantity"
                                placeholder="Số lượng">
                        </div>


                        <div class="form-group">
                            <label>Giá bán</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="price"
                                    aria-label="Amount (to the nearest VND)">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white">.000 VND</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="sale">Giảm giá</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="sale"
                                    aria-label="Amount (to the nearest VND)">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white">%</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="typeProduct">Loại sản phẩm</label>
                            <select class="form-control" id="typeProduct" name="type">
                                <option>PC</option>
                                <option>Laptop</option>
                                <option>Accessory</option>
                                <option>Monitor</option>
                                <option>Chair</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Hình ảnh</label>
                            <input type="file" name="image" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled
                                    placeholder="Hinh ảnh sản phẩm">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-primary text-black" type="button">Tải
                                        lên</button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="infomationProduct">Mô tả sản phẩm</label>
                            {{!-- <textarea class="form-control" id="infomationProduct" rows="5" name="infomation"></textarea> --}}
                            <textarea name="infomation" id="infomationProduct"></textarea>
                            <script>
                                CKEDITOR.replace( 'infomation' );
                            </script>
                        </div>

                        <label for="detailProduct">Chi tiết sản phẩm</label>
                        <div>
                            <div id="list" class="mt-3">
                                <div class="mt-2 mb-5">
                                    <input class="form-control" id="detailProduct" name="nameDetails"
                                        placeholder="name">
                                    <input class="form-control" id="detailProduct" name="valueDetails"
                                        placeholder="value">
                                </div>
                            </div>
                            <button type="button" id="add-input" class="btn btn-primary mt-3 mr-2 text-black">Thêm 1 chi
                                tiết</button>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2 mt-3 text-black">Đăng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sửa sản phẩm</h4>
                    <form class="forms-sample" action="/cms/update-product/{{data.product_id}}" method="POST"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="unitProduct">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="unitProduct" name="name"
                                placeholder="Tên sản phẩm" value="{{data.product_name}}">
                        </div>

                        <div class="form-group">
                            <label for="quantityProduct">Số lượng</label>
                            <input type="number" class="form-control" id="quantityProduct" name="quantity"
                                placeholder="Số lượng" value={{data.product_quantity}}>
                        </div>

                        <div class="form-group">
                            <label>Giá bán</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="price"
                                    aria-label="Amount (to the nearest VND)" value={{data.product_price}}>
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white">.000 VND</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="sale">Giảm giá</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="sale"
                                    aria-label="Amount (to the nearest VND)" value={{data.product_sale_price}}>
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white">%</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="typeProduct">Loại sản phẩm</label>
                            <select class="form-control" id="typeProduct" name="type">
                                <option selected>{{data.product_type}}</option>
                                <option>PC</option>
                                <option>Laptop</option>
                                <option>Accessory</option>
                                <option>Monitor</option>
                                <option>Chair</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Hình ảnh</label>
                            <input type="file" name="image" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled
                                    placeholder="Hinh ảnh sản phẩm" value="{{data.hinhanh}}">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-primary text-black" type="button">Tải
                                        lên</button>
                                </span>
                            </div>
                            <div class="mt-4 flex flex-row items-center">
                                {{#each data.product_images}}
                                <img src="{{this.file_path}}" alt="" width="100px" height="100px" class="border p-2">
                                <a href="/delete-image-product/{{this.image_id}}" class="mx-2">Xóa</a>
                                {{/each}}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="infomationProduct">Mô tả sản phẩm</label>
                                <textarea name="infomation" id="infomationProduct">{{data.product_description}}</textarea>
                            <script>
                                CKEDITOR.replace( 'infomation' );
                            </script>
                        </div>

                        <label for="detailProduct">Chi tiết sản phẩm</label>
                        <div class="input-group">
                            {{#each data.product_details}}
                            <div id="list" class="mt-3">
                                <div class="form-group mr-5">
                                    <input value={{this.detail_id}} class="form-control" name="id_detail" disabled>
                                    <input value="{{this.detail_name}}" class="form-control" name="key">
                                    <input value="{{this.detail_value}}" class="form-control" name="value">
                                </div>
                            </div>
                            {{/each}}
                        </div>
                            <button type="button" id="add-input" class="btn btn-primary mt-3 mr-2 mb-3 text-black">Thêm 1
                                chi tiết</button>
                        <button type="submit" class="btn btn-primary text-black mr-2">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>